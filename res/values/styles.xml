<resources>
    <!-- colors -->
    <color name="scriba_window_bg">#7b7b7b</color>

    <!-- Scriba application theme -->
    <style name="scriba_theme"
        parent="@android:style/Theme.Holo.Light"
        >
        <item name="android:windowBackground">@color/scriba_window_bg</item>
    </style>

    <!-- Entry list container -->
    <style name="scriba_list_container">
        <item name="android:background">@drawable/entry_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Add entry item -->
    <style name="scriba_add_entry_item">
        <item name="android:background">@drawable/entry_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Entry details item -->
    <style name="scriba_entry_item"
        >
        <item name="android:background">@drawable/entry_item_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Entry delimiter -->
    <style name="scriba_entry_delim"
        >
        <item name="android:background">@color/scriba_window_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <!-- Entry details item header -->
    <style name="scriba_entry_item_header"
        >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Entry details item text -->
    <style name="scriba_entry_item_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Entry details item large text -->
    <style name="scriba_entry_item_text_large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Action item -->
    <style name="scriba_action_item"
        >
        <item name="android:background">@drawable/entry_item_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Action item header text -->
    <style name="scriba_action_item_header"
        >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Action item toggle image -->
    <style name="scriba_action_image"
        >
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
