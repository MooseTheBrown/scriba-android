<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    >

    <!-- POC first name -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scriba_entry_item"
        >
        <TextView
            android:id="@+id/poc_firstname_header"
            android:text="@string/poc_firstname_title"
            style="@style/scriba_entry_item_header"
            />
        <TextView
            android:id="@+id/poc_firstname_text"
            style="@style/scriba_entry_item_text_large"
            />
    </LinearLayout>

    <!-- POC second name -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scriba_entry_item"
        >
        <TextView
            android:id="@+id/poc_secondname_header"
            android:text="@string/poc_secondname_title"
            style="@style/scriba_entry_item_header"
            />
        <TextView
            android:id="@+id/poc_secondname_text"
            style="@style/scriba_entry_item_text_large"
            />
    </LinearLayout>

    <!-- POC last name -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scriba_entry_item"
        >
        <TextView
            android:id="@+id/poc_lastname_header"
            android:text="@string/poc_lastname_title"
            style="@style/scriba_entry_item_header"
            />
        <TextView
            android:id="@+id/poc_lastname_text"
            style="@style/scriba_entry_item_text_large"
            />
    </LinearLayout>

    <!-- POC mobile number -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/poc_mobilenum"
        style="@style/scriba_action_item"
        >
        <TextView
            android:id="@+id/poc_mobilenum_header"
            android:text="@string/poc_mobilenum_title"
            style="@style/scriba_action_item_header"
            />
        <TextView
            android:id="@+id/poc_mobilenum_text"
            android:layout_below="@id/poc_mobilenum_header"
            style="@style/scriba_entry_item_text"
            />
        <ImageView
            android:id="@+id/poc_mobilenum_button"
            android:src="@drawable/phone"
            style="@style/scriba_action_image"
            />
    </RelativeLayout>

    <!-- POC phone number -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/poc_phonenum"
        style="@style/scriba_action_item"
        >
        <TextView
            android:id="@+id/poc_phonenum_header"
            android:text="@string/poc_phonenum_title"
            style="@style/scriba_action_item_header"
            />
        <TextView
            android:id="@+id/poc_phonenum_text"
            android:layout_below="@id/poc_phonenum_header"
            style="@style/scriba_entry_item_text"
            />
        <ImageView
            android:id="@+id/poc_phonenum_button"
            android:src="@drawable/phone"
            style="@style/scriba_action_image"
            />
    </RelativeLayout>

    <!-- POC email -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scriba_entry_item"
        >
        <TextView
            android:id="@+id/poc_email_header"
            android:text="@string/poc_email_title"
            style="@style/scriba_entry_item_header"
            />
        <TextView
            android:id="@+id/poc_email_text"
            style="@style/scriba_entry_item_text"
            />
    </LinearLayout>

    <!-- POC position -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scriba_entry_item"
        >
        <TextView
            android:id="@+id/poc_position_header"
            android:text="@string/poc_position_title"
            style="@style/scriba_entry_item_header"
            />
        <TextView
            android:id="@+id/poc_position_text"
            style="@style/scriba_entry_item_text"
            />
    </LinearLayout>

    <!-- POC company -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/poc_company"
        android:clickable="true"
        style="@style/scriba_action_item"
        >
        <TextView
            android:id="@+id/poc_company_header"
            android:text="@string/poc_company_title"
            style="@style/scriba_action_item_header"
            />
        <TextView
            android:id="@+id/poc_company_text"
            android:layout_below="@id/poc_company_header"
            style="@style/scriba_entry_item_text"
            />
        <ImageView
            android:id="@+id/time_exp_image"
            android:src="@drawable/go"
            style="@style/scriba_action_image"
          >
        </ImageView>
    </RelativeLayout>
</LinearLayout>
</ScrollView>
